static void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_constructImpl
  (
    Arcadia_Thread* thread,
    Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}* self
  );

static void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_initializeDispatchImpl
  (
    Arcadia_Thread* thread,
    Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}Dispatch* self
  );
  
static void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_equalTo
