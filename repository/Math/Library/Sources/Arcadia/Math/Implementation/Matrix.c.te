static const Arcadia_ObjectType_Operations _objectTypeOperations = {
  Arcadia_ObjectType_Operations_Initializer,
  .construct = (Arcadia_Object_ConstructCallbackFunction*)&Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_constructImpl,
};

static const Arcadia_Type_Operations _typeOperations = {
  Arcadia_Type_Operations_Initializer,
  .objectTypeOperations = &_objectTypeOperations,
};

Arcadia_defineObjectType(u8"Arcadia.Math.Matrix@{dimensionality}@{scalarSuffix}", Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix},
                         u8"Arcadia.Object", Arcadia_Object,
                         &_typeOperations);

Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}*
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_create
  (
    Arcadia_Thread* thread
  )
{
  Arcadia_SizeValue oldValueStackSize = Arcadia_ValueStack_getSize(thread);
  Arcadia_ValueStack_pushNatural8Value(thread, 0);
  ARCADIA_CREATEOBJECT(Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix});
}

Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}*
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_createWithValues
  (
    Arcadia_Thread* thread,
    @{scalarType} const* values
  )
{
  Arcadia_SizeValue oldValueStackSize = Arcadia_ValueStack_getSize(thread);
  for (Arcadia_SizeValue i = 0, n = @{dimensionality} * @{dimensionality}; i < n; ++i) {
    Arcadia_ValueStack_push@{scalarSuffix}Value(thread, values[i]);
  }
  Arcadia_ValueStack_pushNatural8Value(thread, @{dimensionality} * @{dimensionality});
  ARCADIA_CREATEOBJECT(Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix});
}

void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_setIdentity
  (
    Arcadia_Thread* thread,
    Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}* self
  )
{
  Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_setZero(thread, self);
  for (Arcadia_SizeValue i = 0; i < @{dimensionality}; ++i) {
    self->elements[i][i] = @{oneScalarLiteral};
  }
}

void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_setZero
  (
    Arcadia_Thread* thread,
    Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}* self
  )
{
  for (Arcadia_SizeValue i = 0; i < @{dimensionality}; ++i) {
    for (Arcadia_SizeValue j = 0; j < @{dimensionality}; ++j) {
      self->elements[i][j] = @{zeroScalarLiteral};
    }
  }
}

static void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_constructImpl
  (
    Arcadia_Thread* thread,
    Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}* self
  )
{
  Arcadia_EnterConstructor(Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix});
  {
    Arcadia_ValueStack_pushNatural8Value(thread, 0);
    Arcadia_superTypeConstructor(thread, _type, self);
  }
  if (0 == _numberOfArguments) {
    for (Arcadia_SizeValue i = 0; i < @{dimensionality}; ++i) {
      for (Arcadia_SizeValue j = 0; j < @{dimensionality}; ++j) {
        self->elements[i][j] = @{zeroScalarLiteral};
      }
    }
  } else {
    Arcadia_Thread_setStatus(thread,  Arcadia_Status_NumberOfArgumentsInvalid);
    Arcadia_Thread_jump(thread);
  }
  Arcadia_LeaveConstructor(Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix});
}

static void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_initializeDispatchImpl
  (
    Arcadia_Thread* thread,
    Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}Dispatch* self
  )
{
  ((Arcadia_ObjectDispatch*)self)->equalTo = &Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_equalTo;
  ((Arcadia_ObjectDispatch*)self)->notEqualTo = &Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_notEqualTo;
}

static void
Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_equalTo
  (
    Arcadia_Thread* thread
  )
{
  Arcadia_Natural8Value numberOfArguments = Arcadia_ValueStack_getNatural8Value(thread, 0);
  if (2 != numberOfArguments) {
    Arcadia_Thread_setStatus(thread, Arcadia_Status_NumberOfArgumentsInvalid);
    Arcadia_Thread_jump(thread);
  }
  Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}* self = Arcadia_ValueStack_getObjectReferenceValueChecked(thread, 2, _Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_getType(thread));
  if (!Arcadia_ValueStack_isObjectReferenceValue(thread, 1)) {
    Arcadia_ValueStack_popValues(thread, 3);
    Arcadia_ValueStack_pushBooleanValue(thread, Arcadia_BooleanValue_False);
    return;
  }
  Arcadia_Object* otherObject = Arcadia_ValueStack_getObjectReferenceValue(thread, 1);
  if (!Arcadia_Object_isInstanceOf(thread, otherObject, _Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}_getType(thread))) {
    Arcadia_ValueStack_popValues(thread, 3);
    Arcadia_ValueStack_pushBooleanValue(thread, Arcadia_BooleanValue_False);
    return;
  }
  Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}* other = (Arcadia_Math_Matrix@{dimensionality}@{scalarSuffix}*)otherObject;
  for (Arcadia_SizeValue i = 0, n = @{dimensionality}; i < n; ++i) {
    for (Arcadia_SizeValue j = 0, m = @{dimensionality}; j < m; ++j) {
      if (self->elements[i][j] != other->elements[i][j]) {
        Arcadia_ValueStack_popValues(thread, 3);
        Arcadia_ValueStack_pushBooleanValue(thread, Arcadia_BooleanValue_False);
        return;
      }
    }
  }
  Arcadia_ValueStack_popValues(thread, 3);
  Arcadia_ValueStack_pushBooleanValue(thread, Arcadia_BooleanValue_True);
}

